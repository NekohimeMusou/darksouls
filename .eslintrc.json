{
    "env": {
        "browser": true,
        "es2022": true,
        "jquery": true
    },
    "extends": [ "eslint:recommended", "@typhonjs-fvtt/eslint-config-foundry.js/latest"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-undef": "warn",
        "indent": ["error", 2],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
    }
}
